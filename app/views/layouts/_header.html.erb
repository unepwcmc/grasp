<header class="header">
  <div class="header__inner">
    <a class="header__main-logo" href="<%= reports_path %>">GRASP</a>
    <div class="header__left-side">
      <%= render 'layouts/nav' %>
    </div>

    <div class="header__right-side">
      <div class="header__login">
        <% if user_signed_in? %>
          Signed in as <%= current_user.email %>
          <%= link_to "Sign Out", destroy_user_session_path, class: 'button button-primary' %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class: 'button button-primary' %>
        <% end %>
      </div>
      <button class="header__menu-button">Menu</button>
    </div>
  </div>
</header>
