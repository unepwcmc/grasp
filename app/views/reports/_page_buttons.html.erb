<% if ParamsUtils.strip_ordering_params(params).any? %>
  <%= link_to search_reports_path, class: 'button button-primary' do %>
    <i class="fa fa-search icon icon--closer"></i>Search Again
  <% end %>
  <% if can? :export, @reports %>
    <%= link_to export_reports_path(ParamsUtils.strip_to_search_params(params)), class: 'button button-primary' do %>
      <i class="fa fa-file-text-o icon icon--closer"></i>Export results as CSV file
    <% end %>
  <% end %>
<% else %>
  <% if can? :upload, Report %>
    <%= link_to new_reports_upload_path, class: 'button button-primary' do %>
      <i class="fa fa-upload icon icon--closer"></i>Upload CSV
    <% end %>
  <% end %>
  <% if can? :create, Report %>
    <%= link_to new_report_path, class: 'button button-primary' do %>
      <i class="fa fa-pencil-square-o icon icon--closer"></i>New Report
    <% end %>
  <% end %>
  <% if can? :search, @reports %>
    <%= link_to search_reports_path, class: 'button button-primary' do %>
      <i class="fa fa-search icon icon--closer"></i>Search Reports
    <% end %>
  <% end %>
  <% if can? :export, @reports %>
    <%= link_to export_reports_path(ParamsUtils.strip_to_search_params(params)), class: 'button button-primary' do %>
      <i class="fa fa-file-text-o icon icon--closer"></i>Export CSV file – all reports
    <% end %>
  <% end %>
<% end %>
