<h1>Search Reports</h1>

<%= form_tag reports_path, method: :get do %>
  <div>
    <%= label_tag :report_id, 'Report ID' %>
    <%= text_field_tag :report_id, params[:report_id] %>
  </div>

  <div>
    <%= label_tag :agencies %>
    <%= select_tag :agencies, options_from_collection_for_select(Agency.all, "id", "name"), multiple: true, class: 'select2' %>
  </div>

  <div>
    <%= label_tag :users %>
    <%= select_tag :users, options_from_collection_for_select(User.all, "id", "full_name"), multiple: true, class: 'select2' %>
  </div>

  <div>
    <%= label_tag :from_date, 'From' %>
    <%= date_select :from_date, params[:from_date], include_blank: true, default: nil %>

    <%= label_tag :to_date, 'To' %>
    <%= date_select :to_date, params[:to_date], include_blank: true, default: nil %>
  </div>

  <div>
    <%= label_tag :status_live %>
    <%= check_box_tag :status_live %>

    <%= label_tag :status_dead %>
    <%= check_box_tag :status_dead %>

    <%= label_tag :status_body_parts %>
    <%= check_box_tag :status_body_parts %>
  </div>

  <div>
    <%= label_tag :genus, 'Ape (Genus)' %>
    <%= select_tag :genus, options_for_select(["Bonobo (pan)", "Chimpanzee (pan)", "Gorilla (gorilla)", "Orang-utan (pongo)", "Unknown"]), multiple: true, class: 'select2' %>
  </div>

  <div>
    <%= label_tag :ape_name %>
    <%= text_field_tag :ape_name, params[:ape_name] %>
  </div>

  <div>
    <%= label_tag :country_of_discovery %>
    <%= text_field_tag :country_of_discovery, params[:country_of_discovery] %>
  </div>


  <%= submit_tag "Search", name: nil %>
<% end %>
