<h3>Validation expertise</h3>

<h4>Regional expertise</h4>
<%= f.collection_check_boxes(:expertise_ids, Expertise.where(kind: "region"), :id, :name) do |b| %>
  <div class="form__field">
    <%= b.label do %>
      <%= b.check_box %>
      <span class="label-body"><%= b.text %></span>
    <% end %>
  </div>
<% end %>

<h4>Genus expertise</h4>
<%= f.collection_check_boxes(:expertise_ids, Expertise.where(kind: "genus"), :id, :name) do |b| %>
  <div class="form__field">
    <%= b.label do %>
      <%= b.check_box %>
      <span class="label-body"><%= b.text.gsub(/\(.*/, "") %></span>
    <% end %>
  </div>
<% end %>
