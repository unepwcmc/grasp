<%= content_for :page_title, "Listing Users" %>
<%= content_for :breadcrumbs do %>
  <%= breadcrumb "Users", admin_users_path %>
<% end %>
<%= content_for :page_buttons do %>
  <%= link_to 'New User', new_admin_user_path, class: 'button button-primary' %>
<% end %>

<table class="table u-full-width table--users">
  <thead class="table__head">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name %></td>
        <td><%= link_to 'Show', admin_user_path(user) %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


